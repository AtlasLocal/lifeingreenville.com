<%= erb :'shared/header', :locals => locals %>

<div id="categories" class="row">
  
  <% articles.each_with_index do |a, i| %>
  <div class="span-one-third<%= i % 3 == 0 ? ' column alpha' : '' %><%= i % 3 == 2 ? ' column omega' : '' %>">
    <div class="content">
      <h2><a href="<%= a.permalink %>" title="<%= a.title.gsub('<br>', '') %>"><%= a.title %></a></h2>
      <%# '<p>' + a.description + '</p>' %>
      <a class="catlink" href="<%= a.permalink %>" title="<%= a.title.gsub('<br>', '') %>"><img src="/images/categories/<%= a.metadata[:category_image] %>"/></a>
    </div><!-- /.content -->
  </div>
<% end %>

</div><!-- /#categories -->

<%= erb :'shared/footer', :locals => locals %>
