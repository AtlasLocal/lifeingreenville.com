<%= erb :'shared/header', :locals => locals %>

<div id="categories" class="row">
  
  <% articles.each_with_index do |a, i| %>
  <div class="span<%= i % 3 == 2 ? 6 : 5 %>">
    <div class="content">
      <h2><a href="#" title="<%= a.title %>"><%= a.title %></a></h2>
      <p><%= a.description %></p>
      <a href="#" title="<%= a.title %>"><img src="/images/categories/<%= a.metadata[:category_photo] %>" width="250" height="214" /></a>
    </div><!-- /.content -->
  </div>
<% end %>

</div><!-- /#categories -->

<%= erb :'shared/footer', :locals => locals %>
