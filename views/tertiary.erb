<%= erb :'shared/header' %>

  <article class="row span10">
  <%= yield %>
  </article>
  
  <aside class="row span3 offset1">
  <% begin %>
      <%= markdown "asides/#{category}/#{name}".to_sym %>
  <% rescue Errno::ENOENT %>
  <% end %>
  <% if File.exist?("views/asides/#{category}/#{name}.md") %>
  <aside>
    <%= markdown "asides/#{category}/#{name}".to_sym %>
  </aside>
  <% end %>

<%= erb :'shared/footer' %>
